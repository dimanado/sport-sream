.group
  .column1
    %h1
      Update Password
    - if flash[:notice]
      .alert-message.success
        = flash[:notice]
    %br/
    = form_for(resource, :as => resource_name, :url => merchant_registration_path, :html => { :method => :put }) do |f|
      - if devise_error_messages!.length > 0
        .alert-message.error
          = devise_error_messages!
      %p.header= f.label :email
      %p.form= f.email_field :email
      %p.header= f.label :password
      %p.form
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password
      %p.header= f.label :password_confirmation
      %p.form
        = f.password_field :password_confirmation
      %p.header= f.label :current_password
      %p.form
        %i (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password
      = f.submit "Update", class: 'special' 