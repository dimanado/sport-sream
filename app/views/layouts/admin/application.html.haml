!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")/
    = stylesheet_link_tag "application"
    = stylesheet_link_tag 'redesign/site'
    = stylesheet_link_tag 'admin/application'
    = javascript_include_tag "admin/application"
    = csrf_meta_tags
    %title Dollarhood Administration
  %body
    .container
      = render 'layouts/admin/admin_bar'
      .header
        %h1
          Admin:
          = @controller_name
      .content
        - flash.each do |key, message|
          .alert-message{:class => key}
            = message
        - @shown == true
        = yield
