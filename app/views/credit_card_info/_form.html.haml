- if @result
  #total-errors{:style => "color:red;"}
    = h(@result.errors.size)
    error(s)
= form_for :credit_card,                                        |
  :url => Braintree::TransparentRedirect.url,                   |
  :params => @result && @result.params[:credit_card],           |
  :builder => ApplicationHelper::BraintreeFormBuilder,          |
  :errors => @result && @result.errors.for(:credit_card) do |f| |
  = field_set_tag "" do
    %p= f.label :number, 'Card number'
    %p.text= f.text_field :number, :name => "customer[credit_card][number]"
    %p= f.label :expiration_date, 'Expiration date'
    %p.text= f.text_field :expiration_date, :name => "customer[credit_card][expiration_date]"
    %p
      = f.label :cvv, 'CVV'
      %a{href: "https://www.cvvnumber.com/cvv.html", target: "_blank", style: "font-size:11px;display:inline-block;margin-left:5px;"} What is my CVV code?
    %p.text= f.text_field :cvv, :name => "customer[credit_card][cvv]"
    = fields_for :billing_address do |p|
      %p= p.label :postal_code, 'Zip code'
      %p.text= p.text_field :postal_code, :name => "customer[credit_card][billing_address][postal_code]"
  = hidden_field_tag :tr_data, @tr_data, id: 'tr-data'
  = f.submit 'Save', class: 'btn btn-primary btn-rec btn-save'