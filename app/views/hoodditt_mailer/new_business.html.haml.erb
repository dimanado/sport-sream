%html
  %body{:style => "width:525px;height:500px;margin:5px;border:1px solid #d3d3d3"}
    %div{:style => "width:490px;float:left;margin:40px 0 30px 35px "}
      - if @business.has_logo?
        %img{:style=>"width:150px;float:left",:src=>@business.logo_url}
      %div{:style => "float:left;margin:0 0px 0 20px;width:320px"}
        %p{:style => "color:#000;font:11pt Verdana;margin:0px"}
        	Name:
        	= @business.name
        %p{:style => "color:#000;font:11pt Verdana;margin:0"}
        	Address:
        	= @business.full_address
        %p{:style => "color:#000;font:11pt Verdana;margin:0"}
        	Phone: 
        	= @business.phone